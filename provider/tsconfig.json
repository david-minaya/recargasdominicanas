{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["ES6"]
  },
  "include": [
    "./src",
    "custom.d.ts"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true
  }
}
